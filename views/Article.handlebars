<div class="container">
    {{!-- page header --}}
    <div class="row">
        <div class="jumbotron">
        <h1>Read it on Reddit</h1>
        <br>
        <form action="/" method="GET">
            <div class="col-lg-2"><button class="btn btn-danger">Home</button></div>   
        </form>
        <div class="col-lg-2">
            <form action="/getNews" method="GET">
                <button class="btn btn-success" id="getNews"> Click to get lastest news</button>            
            </form>
        </div>
        <div class="col-lg-2 col-lg-offset-1">
            <form action="/getArticle" method="GET">
                <button class="btn btn-primary" id="getNews">Your articles</button>            
            </form>
        </div>
       
    </div>
    </div>
    {{!-- // end page header --}}
    {{!-- news panel --}}
    <div class="row">
        {{!-- panel element --}}
        {{#each result}}
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">{{title}}</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-9">
                        <p><a href="{{url}}">{{url}}</a></p>
                    </div>
                    <div class="col-lg-3">
                        <form action="/deleteArticle/{{_id}}" method="GET">
                            <button type="button" class="btn btn-default" data-toggle="modal" data-target="#{{id}}">To add notes</button>
                            <button type="submit" class="btn btn-danger">Delete article</button>  
                        </form>
                         
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
        {{!-- end panel element --}}
    </div>
</div>

{{!-- modal togger code --}}
<!-- Modal -->
{{#each result}}
<div id="{{id}}" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">{{title}}</h4>
      </div>
        <div class="modal-body">
            Your note saved here
        </div>
        <hr>
      <form action="/addNote" method="POST">
        <div class="modal-body">
            <div class="form-group">
                <label for="comment">Your note:</label>
                <textarea class="form-control" rows="5" id="comment" style="resize: none" ></textarea>
            </div>
            <button type="button" class="btn btn-default" data-dismiss="modal">Add Note</button>
            {{!-- <button type="button" class="btn btn-default" data-dismiss="modal">Delete Note</button> --}}
        </div>
        {{!-- <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div> --}}
      </form>
    </div>
  </div>
</div>
{{/each}}